<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    android:orientation="vertical"
    tools:context="id.STIKOM.kesehatan.Layout1MainActivity" >

    <TextView
        android:id="@+id/txtketerangan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="6"
        android:gravity="center"
        android:text="Kategori Penyakit"
        android:textAppearance="?android:attr/textAppearanceLarge" />
<Button
        android:id="@+id/btnmenular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Penyakit Menular" />
    <Button
        android:id="@+id/btntidakmenular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
      
        android:text="Penyakit Tidak Menular" />

    

    <Button
        android:id="@+id/btnback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/kembali" />

</LinearLayout>